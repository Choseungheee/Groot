<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.pot.PotDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/potNameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/potPlant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textAlignment="center"
            android:layout_marginRight="-60dp"
            android:rotation="270"
            android:text="산세베리아"
            android:breakStrategy="balanced"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/potName" />

        <TextView
            android:id="@+id/potName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:breakStrategy="balanced"
            android:lineSpacingExtra="-10dp"
            android:text="산세산세"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="만나러 가기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <io.github.sceneview.SceneView
        android:id="@+id/characterSceneView"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>


<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/sample_character" />-->

        <ImageButton
            android:id="@+id/potPostDiaryBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/radius10"
            android:backgroundTint="@color/button_sub"
            android:src="@drawable/ic_post"
            app:layout_constraintEnd_toEndOf="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:tint="@color/button_main" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:progress="60"
        android:progressBackgroundTint="@color/grey"
        android:progressTint="@color/point" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/tabBtn1"
                style="@style/TAB_BTN_WATER"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tabBtn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tabBtn2"
                style="@style/TAB_BTN_POT"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tabBtn3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tabBtn3"
                style="@style/TAB_BTN_BUG"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tabBtn4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tabBtn4"
                style="@style/TAB_BTN_SUN"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tabBtn5"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/tabBtn5"
                style="@style/TAB_BTN_PILL"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@drawable/round_rectangle"
        android:elevation="4dp"
        android:padding="20dp">

        <fragment
            android:id="@+id/frame"
            android:name="com.chocobi.groot.view.pot.PotDetailTab1Fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:tag="info_sub" />
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toDiaryBtn"
        style="@style/GO_TO_DIARY_BTN"
        android:layout_marginTop="15dp" />


</LinearLayout>
