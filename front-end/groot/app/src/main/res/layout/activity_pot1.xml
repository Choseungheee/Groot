<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.pot.Pot1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/plantNameContainer">

        <TextView
            android:id="@+id/plantNameShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-10dp"
            android:rotation="270"
            android:text="산세베리아"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black"
            app:layout_constraintEnd_toStartOf="@+id/potName" />

        <TextView
            android:id="@+id/potName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:breakStrategy="balanced"
            android:lineSpacingExtra="-10dp"
            android:text="김정원의 산세베리아"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/potPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_rectangle"
        android:clipToOutline="true"
        android:src="@drawable/sample_plant_image" />

    <TextView
        android:id="@+id/plantNameLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산세베리아"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potPhoto" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="초보자"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="다육형"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/main" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add1Btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_button_background"
        android:backgroundTint="@color/point"
        android:text="Go"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginVertical="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

    </LinearLayout>


</ScrollView>