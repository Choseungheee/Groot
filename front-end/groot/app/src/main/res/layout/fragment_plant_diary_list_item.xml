<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plantDiaryItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plantNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산세산세"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/postedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.04.18 11:06"
                    android:textColor="@color/hint"
                    android:textSize="10sp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Spinner 정의 -->
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="5dp"
                    android:prompt="@null"
                    android:spinnerMode="dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/spinnerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:src="@drawable/ic_vertical_dots"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>




            <ImageView
                android:id="@+id/diaryPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/radius10"
                android:clipToOutline="true"
                android:src="@drawable/sample_plant_image"
                android:layout_marginHorizontal="20dp"/>



        <TextView
            android:id="@+id/diaryContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            />
        <TextView
            android:id="@+id/tvOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자세히보기"
            android:layout_gravity="right"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>