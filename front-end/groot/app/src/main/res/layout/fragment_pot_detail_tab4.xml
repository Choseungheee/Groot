<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.pot.PotDetailTab4Fragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info_fill"
            android:tint="@color/sun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환경 관리 Tip"
            android:textSize="20dp"
            android:textColor="@color/sun"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/sunTabContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sun tab" />
    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:id="@+id/sunTabContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sun tab" />

</LinearLayout>