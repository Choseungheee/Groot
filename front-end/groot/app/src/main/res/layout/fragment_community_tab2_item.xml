<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/articleItem"
    android:layout_marginHorizontal="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/shareSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/sub"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:id="@+id/position"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="위치"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#7D7D7D"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/shareStatus"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:text="나눔완료"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plant_default"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewWriter"
                    android:text="작성자"
                    android:textColor="#111111"
                    android:textSize="6pt"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewTitle"
                    android:textColor="#111111"
                    android:textSize="9pt"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tagList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/fragment_community_article_tag_item"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipRegionGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_eye"/>
            <TextView
                android:id="@+id/eyeCnt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_marginRight="7dp"

                android:text="조회수"/>
            <ImageView
                android:id="@+id/commentIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_comment"/>
            <TextView
                android:id="@+id/commentCnt"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="7dp"
                android:textColor="@color/grey"

                android:gravity="center"
                android:text="댓글수"/>
            <ImageView
                android:id="@+id/bookmarkLine"
                android:layout_width="18dp"
                android:layout_height="fill_parent"
                android:padding="1dp"
                android:src="@drawable/ic_bookmark"/>
            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_marginHorizontal="3dp"
                android:text="작성일"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


