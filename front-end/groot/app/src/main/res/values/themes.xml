<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Groot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="android:colorPrimaryDark">@color/main</item>
        <item name="android:bottomDark">@color/main</item>
        <item name="android:centerDark">@color/main</item>
        <item name="android:fullDark">@color/main</item>
        <item name="android:topDark">@color/main</item>

        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/grey</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.ExtendedFloatingActionButton
        </item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>

    <style name="Theme.Groot" parent="Base.Theme.Groot" />

    <!--    calendar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!--    bottom navigation bar active indicator-->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/main</item>

    </style>


    <!--FAB-->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <!--        FAB 버튼 배경색-->
        <item name="colorContainer">@color/white</item>
        <!--        FAB 버튼 아이콘색-->
        <item name="colorOnContainer">@color/main</item>

    </style>


    <!--    baseline-->
    <style name="BASIC_LINE">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>


    <!-- search chip-->
    <style name="BASIC_CHIP" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/search_chip_checked_bg_color</item>
        <item name="android:textColor">@color/search_chip_checked_text_color</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--plant chip-->
    <style name="PLANT_CHIP" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>

        <item name="chipIconVisible">true</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="iconStartPadding">10dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipIconSize">20dp</item>

        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--check chip-->
    <style name="CHECK_CHIP" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>

        <item name="chipIconVisible">true</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="iconStartPadding">10dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="chipIconSize">20dp</item>

        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--    button-->

    <!--  기본 버튼 스타일 -->
    <style name="MAIN_BTN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/radius10</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GO_TO_DIARY_BTN">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:drawableLeft">@drawable/drawable_left_img_customize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/radius10</item>
        <item name="android:backgroundTint">@color/sub</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:text">다이어리 보러 갈래요</item>
    </style>

    <style name="BASIC_ICON_BADGE">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:elevation">4dp</item>
    </style>


    <style name="BASIC_ICON_BTN">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BASIC_ICON_BTN_SELECTED" parent="BASIC_ICON_BTN">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="WHITE_CIRCLE_BTN" parent="BASIC_ICON_BTN">
        <item name="android:background">@drawable/circle_button_white</item>
    </style>

    <style name="TAB_BTN_WATER_SELECTED" parent="BASIC_ICON_BTN_SELECTED">
        <item name="android:background">@drawable/circle_button_water</item>
        <item name="android:src">@drawable/ic_water</item>
    </style>

    <style name="TAB_BTN_WATER" parent="WHITE_CIRCLE_BTN">
        <item name="android:tint">@color/water</item>
        <item name="android:src">@drawable/ic_water</item>
    </style>


    <style name="TAB_BTN_POT_SELECTED" parent="BASIC_ICON_BTN_SELECTED">
        <item name="android:background">@drawable/circle_button_pot</item>
        <item name="android:src">@drawable/ic_pot</item>
    </style>

    <style name="TAB_BTN_POT" parent="WHITE_CIRCLE_BTN">
        <item name="android:tint">@color/pot</item>
        <item name="android:src">@drawable/ic_pot</item>
    </style>

    <style name="TAB_BTN_BUG_SELECTED" parent="BASIC_ICON_BTN_SELECTED">
        <item name="android:background">@drawable/circle_button_bug</item>
        <item name="android:src">@drawable/ic_bug</item>
    </style>

    <style name="TAB_BTN_BUG" parent="WHITE_CIRCLE_BTN">
        <item name="android:tint">@color/bug</item>
        <item name="android:src">@drawable/ic_bug</item>
    </style>

    <style name="TAB_BTN_SUN_SELECTED" parent="BASIC_ICON_BTN_SELECTED">
        <item name="android:background">@drawable/circle_button_sun</item>
        <item name="android:src">@drawable/ic_sunny</item>
    </style>

    <style name="TAB_BTN_SUN" parent="WHITE_CIRCLE_BTN">
        <item name="android:tint">@color/sun</item>
        <item name="android:src">@drawable/ic_sunny</item>
    </style>

    <style name="TAB_BTN_PILL_SELECTED" parent="BASIC_ICON_BTN_SELECTED">
        <item name="android:background">@drawable/circle_button_pill</item>
        <item name="android:src">@drawable/ic_pill</item>
    </style>

    <style name="TAB_BTN_PILL" parent="WHITE_CIRCLE_BTN">
        <item name="android:tint">@color/pill</item>
        <item name="android:src">@drawable/ic_pill</item>
    </style>

    <!--  지역 필터 칩 아이콘  -->
    <style name="REGION_CHIP_ICON" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/region_chip</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="closeIconTint">@color/white</item>
    </style>

    <!-- 하단 모달 -->
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

<!--  검색 디테일 페이지 리니어 레이아웃  -->
    <style name="SEASRCH_DETAIL_LINEAR_STYLE">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

<!--  회색 구분선  -->

    <style name="GREY_UNDERLINE">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="background">@drawable/round_rectangle</item>
        <item name="backgroundTint">#000</item>
    </style>

</resources>